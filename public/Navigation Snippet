<nav class="bottom-controls">
<button onclick="scrollToPrev()" class="nav-btn">≻</button>
    
    <span class="nav-divider">||</span>
    
    <a href="#top" class="nav-btn" style="text-decoration:none; font-size:1.2rem;">❀</a>
    
    <span class="nav-divider">||</span>
    
    <button onclick="scrollToNext()" class="nav-btn">≺</button>
</nav>

<script>
    function getPosts() {
        // Collect all your articles
        return Array.from(document.querySelectorAll('.post'));
    }

    function scrollToNext() {
        const posts = getPosts();
        const container = document.querySelector('.scroll-container');
        
        // Find the first post that is mostly to the LEFT of the viewport
        // (Hidden in the future) or currently centered.
        // Simple logic: Find the first post whose 'right' edge is left of the screen center.
        
        // Simpler Master logic: Just find the current one and jump to index + 1
        let current = getCurrentPost(posts, container);
        if (current.index < posts.length - 1) {
            posts[current.index + 1].scrollIntoView({ behavior: 'smooth', inline: 'center' });
        }
    }

    function scrollToPrev() {
        const posts = getPosts();
        const container = document.querySelector('.scroll-container');
        let current = getCurrentPost(posts, container);
        
        if (current.index > 0) {
            posts[current.index - 1].scrollIntoView({ behavior: 'smooth', inline: 'center' });
        }
    }

    function getCurrentPost(posts, container) {
        // Returns the index of the post currently most visible on screen
        const containerCenter = container.scrollLeft - (window.innerWidth / 2); // Note: ScrollLeft is negative in some browsers for RTL, but strictly vertical-rl usually handles X axis positively from right. 
        
        // Actually, let's trust the browser's view.
        // We calculate which element is closest to the center of the screen.
        let closest = { index: 0, dist: Infinity };
        const centerPoint = window.innerWidth / 2;

        posts.forEach((post, index) => {
            const rect = post.getBoundingClientRect();
            // Distance from center of screen
            const dist = Math.abs((rect.left + rect.width / 2) - centerPoint);
            if (dist < closest.dist) {
                closest = { index: index, dist: dist };
            }
        });
        return closest;
    }
</script>